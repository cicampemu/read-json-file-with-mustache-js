<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
	<title>JSON carousel</title>
</head>
<body>

	<div id="speakerbox">
		<a href="#" id="prev_btn">&laquo;</a>
		<a href="#" id="next_btn">&raquo;</a>
		<div id="carousel">
		
		</div>	
	</div>	

<script id="speakerstpl" type="text/template">
{{#speakers}}
	<div class="speaker">
		<img src="images/{{shortname}}_tn.jpg" alt="Photo of {{name}}" />
		<h3>{{name}}</h3>
		<h4>{{reknown}}</h4>
		<p>{{bio}}</p>
	</div>
{{/speakers}}
</script>

<script src="http://code.jquery.com/jquery-1.11.0.min.js" type="text/javascript"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.cycle/3.03/jquery.cycle.all.min.js" type="text/javascript"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/mustache.js/0.8.1/mustache.min.js" type="text/javascript"></script>

<script type="text/javascript">
	$(function(){

		//load data from JSON file
		$.getJSON('data.json', function(data){
			// load the template
			var template = $('#speakerstpl').html();
			// load the data
			var html = Mustache.to_html(template, data);
			$('#carousel').html(html);

			// carousel with JQUERY cycle
			$('#carousel').cycle({
				fx: 'fade',
				pause: 1,
				next: '#next_btn',
				prev: '#prev_btn',
				speed: 500,
				timeout: 10000
			})

		}); // getJSON
	}); // function
</script>

</body>
</html>
